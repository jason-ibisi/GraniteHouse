@model IEnumerable<GraniteHouse.Models.SpecialTags>
@{
    ViewData["Title"] = "Index";
}

<div class="row mt-3">
    <div class="col-6">
        <h2 class="text-info">Special Tags List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Special Tag</a>
    </div>
</div>

<div class="row mt-3">
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(m=>m.Name)</th>
            <th></th>
            <th></th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m=>item.Name)</td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

