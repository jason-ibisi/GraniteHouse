@model GraniteHouse.Models.ViewModel.ProductsViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info mt-2">Product Details</h2>

<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Price" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.ProductTypes.Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SpecialTags"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.SpecialTags.Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.ShadeColor"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.ShadeColor" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Available"></label>
            </div>
            <div class="col-8">
                <input type="checkbox" asp-for="Products.Available" disabled />
            </div>
        </div>
    </div>
    <div class="col-3 offset-1">
        <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
    </div>
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Products.Id">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>
